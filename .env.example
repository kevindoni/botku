# Environment Configuration for YouTube Streaming Bot

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=5000

# Security
SECRET_KEY=your-secret-key-change-this-in-production
SESSION_SECRET=another-secret-for-sessions

# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_client_id_here
YOUTUBE_CLIENT_SECRET=your_client_secret_here
YOUTUBE_CHANNEL_ID=your_channel_id_here

# Streaming Configuration
YOUTUBE_STREAM_KEY=your_stream_key_here
STREAM_BITRATE=2500
STREAM_RESOLUTION=1920x1080
STREAM_FPS=30

# Bot Configuration
COMMENT_BOT_ENABLED=true
COMMENT_MIN_DELAY=30
COMMENT_MAX_DELAY=180

VIEWER_BOT_ENABLED=true
VIEWER_MIN_COUNT=5
VIEWER_MAX_COUNT=25

# Database (if using)
DATABASE_URL=sqlite:///db/streaming_bot.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Proxy Settings (optional)
USE_PROXY=false
PROXY_LIST_FILE=config/proxies.txt

# Chrome/Selenium Settings
CHROME_BINARY_PATH=/usr/bin/chromium-browser
CHROMEDRIVER_PATH=/usr/local/bin/chromedriver
HEADLESS_MODE=true

# FFmpeg Settings
FFMPEG_PATH=/usr/bin/ffmpeg
ENABLE_GPU_ENCODING=false

# Security & Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60
TRUSTED_IPS=127.0.0.1,localhost
